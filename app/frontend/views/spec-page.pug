extends layout

block content
  html(lang="en")
    head
      meta(charset="UTF-8")
      meta(name="viewport", content="width=device-width, initial-scale=1.0")
      link(rel="stylesheet", href="/stylesheets/style.css")
      link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css')
      link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css')
      script(src='https://cdn.jsdelivr.net/npm/flatpickr')
      link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Noto+Serif&display=swap")
      script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    body
      header
        include header
      main
        .right-column
          .text-block 
            h1.blocky #{allData.type} nº #{allData.code}
          .text-block.blocky
            h3 Publicação:  
              a(href="#") #{allData.publication}
            h3 Emissor:  
              a(href="#") #{allData.ministry}
            h3 Data de publicação:  
              a(href="#") #{allData.publication_date}
            h3.inline-links
              a(href=allData.url) Página Oficial
              -var sep = ' | '
              a #{sep}
              a(href=allData.additional_link) PDF Oficial
              a #{sep}
              a(href="#") PDF Não Oficial
          .text-block.blocky
            div.content
              p!= allData.content
