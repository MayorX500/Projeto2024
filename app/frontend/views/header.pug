    document.addEventListener('DOMContentLoaded', function() {
        updateAuthenticationStatus();
    });

    function isLoggedIn() {
        // This should be replaced with a real check based on your authentication system
        // For example, check if a session variable, cookie, or local storage item is set
        return document.cookie.indexOf('loggedIn=1') !== -1;
    }

    function updateAuthenticationStatus() {
        if (isLoggedIn()) {
            document.getElementById('loginButton').href = '/logout'; // Change to logout link if logged in
            document.getElementById('loginButton').innerHTML = '<i class="fa fa-power-off" aria-hidden="true"></i> Logout';
            document.querySelector('.bottom-options').style.display = 'flex'; // Show bottom options
        } else {
            document.getElementById('loginButton').href = '/login'; // Keep as login link if not logged in
            document.getElementById('loginButton').innerHTML = '<i class="fa fa-user" aria-hidden="true"></i> Login';
            document.querySelector('.bottom-options').style.display = 'none'; // Hide bottom options
        }
    }

    function logout() {
        console.log('Logged out');
        // Perform logout logic here, e.g., clearing session or cookies
        document.cookie = "loggedIn=0; path=/;";  // Adjust as necessary for your setup
        updateAuthenticationStatus();  // Update UI after logging out
    }

    function checkAuthentication() {
        if (isLoggedIn()) {
            logout();  // Calls logout if already logged in
        } else {
            window.location.href = '/login';  // Redirects to login page
        }
    }
